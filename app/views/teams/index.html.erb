<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone number</th>
      <th>Member</th>
      <th>Type yard</th>
      <th>History</th>
      <th>Motes</th>
      <th>Type sex</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.phone_number %></td>
        <td><%= team.member %></td>
        <td><%= team.type_yard %></td>
        <td><%= team.history %></td>
        <td><%= team.motes %></td>
        <td><%= team.type_sex %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

